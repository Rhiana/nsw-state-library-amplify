<div class="progress-content">
  <div class="progress-header">Transcript Progress</div>
  <div class="progress-label">You have edited</div>
  <div class="progress-value">
    <span><%= lines_edited %></span> lines
    <% if (percent_edited > 0) { %>
      <span class="percent-edited">(<%= percent_edited %>%)</span>
    <% } %>
  </div>
  <% if (percent_edited > 0) { %>
  <div class="progress-bar"><div style="width: <%= percent_edited %>%"></div></div>
  <% } %>
  <% if (lines_available > 0) { %>
  <div class="progress-label progress-available">Out of <span><%= lines_available %></span> available lines</div>
  <% } %>
</div>

<a class="progress-toggle" title="Toggle Progress Display"></a>
