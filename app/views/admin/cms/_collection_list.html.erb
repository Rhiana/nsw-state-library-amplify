<table>
  <thead>
    <tr>
      <th>Collection ID</th>
      <th>Title</th>
      <th>Items</th>
      <th>Published</th>
      <th>Actions</th>
      <th></th>
    </tr>
  </thead>

  <tbody id="collection_list">
    <% Collection.find_each do |collection| %>
      <tr>
        <td><%= collection.uid %></td>
        <td>
          <%= link_to collection.title,
              collection_path(collection.uid, format: :json)
          %>
        </td>
        <td><%= collection.transcripts.size %></td>
        <td><%= check_box_tag :published, collection.published? %></td>
        <td>
          <%= button_to "Edit Collection",
              edit_admin_cms_collection_path(collection),
              method: "get",
              data: { disable_with: "Loading..." }
          %>
        </td>
        <td>
          <%= button_to "View Items",
              admin_cms_collection_path(collection.uid),
              method: "get",
              data: { disable_with: "Loading..." }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
