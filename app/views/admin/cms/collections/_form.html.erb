<%= form_for [:admin, :cms, @collection], html: { multipart: true } do |f| %>
  <%= render partial: "admin/cms/shared/errors",
             locals: {resource: @collection }
   %>

  <div>
    <%= f.label :uid %>
    <%= f.text_field :uid %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :call_number %>
    <%= f.text_field :call_number %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :url, "Catalogue Url" %>
    <%= f.text_field :url %>
  </div>

  <div>
    <%= f.label :vendor_id %>
    <%= f.select :vendor_id, Vendor.pluck(:name, :id) %>
  </div>

  <div>
    <%= image_tag(@collection.image.thumb) if @collection.image.present? %>
    <%= f.label :image, "Default Collection Image" %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
