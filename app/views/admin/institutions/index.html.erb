<%= render partial: 'layouts/admin_side_pane' %>

<h1>Institutions</h1>
<%= link_to 'New Institution', new_admin_institution_path, class: 'btn btn-primary' %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th colspan="2" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.name %></td>
        <td>
          <%= link_to edit_admin_institution_path(institution)  do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

