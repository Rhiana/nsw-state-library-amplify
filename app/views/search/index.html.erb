<script src="vendor/mark.js/dist/mark.min.js"></script>
<% content_for :home_banner do %>
  <div class="header-bar">
    <%= link_to root_path, class: "title", "aria-label": "Click to return to homepage" do %>
      <img src="/nsw-state-library-amplify/assets/img/logo_cropped.png" alt="Logo" class="logo">
      <p class="logo-text">Amplify</p>
    <% end %>
  </div>
<% end %>
<br />
<br />
<form id="search-form" class="search-form large" role="search">
  <input name="keyword" id="keyword" value="" placeholder="Search All Transcripts">
  <button type="submit" class="submit" title="Submit" aria-label="Submit"></button>
</form>
<div data-sticky="#transcript-facets" class="sticky-on-scroll">
  <div id="transcript-facets" class="transcript-facets">
    <div>
      <div class="facet">
        <label for="filter-by-collection">Filter by Collection: </label>
        <div name="filter-by-collection" class="select collection">
          <div class="select-active collection-filter">All Collections</div>
          <div class="select-options collection-filter" role="menu" aria-hidden="true">
            <%= raw collection_list(@collection) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="transcript-results" class="transcript-results">
  <div class="transcript-list-search" role="list"></div>
</div>
